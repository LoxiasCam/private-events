<h1 class="text-primary py-2">Upcoming Events:</h1>
  <% @upcoming_events.each do |event| %>
    <div class="card my-2">
      <div class="card-header">
        <%= event.event_date %>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= link_to event.event_name, event_path(event)%></p>  
          <% if user_signed_in? %>       
          <footer class="blockquote-footer"><cite title="Source Title"><%= event.creator.email %></cite></footer>
          <% end %>
        </blockquote>
      </div>

      <div  class="card-footer">
        <% if user_signed_in? %>
          <% attend = EventAttendee.find_by(attended_event: event.id, event_attendee: current_user) %>
          <% if attend %>
            <%= button_to('Unattend Event!', event_attendee_path(id: attend.id, attended_event: event.id), method: :delete, class: "btn btn-secondary btn-sm") %>
          <% else %>
            <% @id = event.id %>
            <%= render 'event_attendees/form' %>
          <% end %>
        <% end %>
        
      </div> 
    </div>
  <% end %>

