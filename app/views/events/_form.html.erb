<%= form_with model: @event, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :event_name, placeholder: "Event name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.date_field :event_date, placeholder: "Event date", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :user_id, id: :event_user_id, value: current_user.id, class: "form-control", type: :hidden %>
  </div>
  <%= f.submit class: "button" %>
<% end %>
